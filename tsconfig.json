{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2017", "es2020.promise"],
    "baseUrl": "src",
    "paths": {
      "$pages/*": ["pages/*"],
      "$pages": ["pages/index"],
      "$components/*": ["components/*"],
      "$shared/*": ["components/shared/*"],
      "$utils/*": ["utils/*"],
      "$contexts/*": ["contexts/*"],
      "$types/*": ["types/*"],
      "$hooks/*": ["hooks/*"],
      "$config": ["config/index"],
      "$config/*": ["config/*"],
      "$constants/*": ["constants/*"],
      "$mixins/*": ["components/shared/mixins/*"],
      "$core/*": ["components/shared/core/*"],
      "$icons/*": ["components/icons/*"]
    },
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./typings/**/*"],
    "types": ["react", "node"]
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out",
    "next.config.js",
    "__tests__"
  ],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
